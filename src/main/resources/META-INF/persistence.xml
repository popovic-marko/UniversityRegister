<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="RegistarUniverzitetaPU" transaction-type="RESOURCE_LOCAL"> 
  <!-- <persistence-unit name="RegistarUniverzitetaPU" transaction-type="JTA"> -->
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <!-- ovde navesti sve domenske klase -->
    <class>rs.ac.bg.fon.silab.ru.domain.ManagerPosition</class>
    <class>rs.ac.bg.fon.silab.ru.domain.University</class>
    <class>rs.ac.bg.fon.silab.ru.domain.ContactType</class>
    <class>rs.ac.bg.fon.silab.ru.domain.Country</class>
    <class>rs.ac.bg.fon.silab.ru.domain.City</class>
    <class>rs.ac.bg.fon.silab.ru.domain.Faculty</class>
    <class>rs.ac.bg.fon.silab.ru.domain.Manager</class>
    <class>rs.ac.bg.fon.silab.ru.domain.ManagementPeriod</class>
    <class>rs.ac.bg.fon.silab.ru.domain.Title</class>
    <class>rs.ac.bg.fon.silab.ru.domain.Contact</class>
    <class>rs.ac.bg.fon.silab.ru.domain.Rank</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/universityregister"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name = "hibernate.show_sql" value = "true" />
    </properties>
  </persistence-unit>
</persistence>
